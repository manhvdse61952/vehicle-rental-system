<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#EEEEEE"
    android:orientation="vertical"
    android:weightSum="10">
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:theme="@style/ThirdAppTheme"
        app:errorTextAppearance="@style/error_apperance">

        <EditText
            android:id="@+id/edtVehiclePlate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Biển số xe"
            android:inputType="text"
            android:textColor="#000" />

    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giấy tờ"
            android:textColor="#000"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/cbxHouseHold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Sộ hộ khẩu"
            android:checked="false"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/cbxIdCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chứng minh nhân dân"
            android:checked="false"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:text="Chụp ảnh giấy đăng ký xe"
            android:textColor="#000"
            android:paddingLeft="10dp"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/btnTakePictureVehicle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1.5"
            android:padding="5dp"
            android:src="@drawable/ic_camera" />

        <ImageView
            android:id="@+id/btnSelectPictureVehicle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1.5"
            android:padding="5dp"
            android:src="@drawable/ic_gallery" />
    </LinearLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/signup_frame_txt"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:theme="@style/ThirdAppTheme"
        app:errorTextAppearance="@style/error_apperance">

        <EditText
            android:id="@+id/edtVehicleFrameNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Số khung xe"
            android:inputType="text"
            android:textColor="#000" />

    </android.support.design.widget.TextInputLayout>
    <ImageView
        android:id="@+id/imgSignupOwner"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/img_default_image"
        android:layout_weight="4.3" />


    <com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/signup_ico"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:alignItems="center"
        app:flexWrap="wrap"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        app:justifyContent="space_around">

        <Button
            android:id="@+id/btnVehicleBack"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/btn_login"
            android:text="Quay lại"
            android:textColor="#000"
            android:textAllCaps="false"
            android:textSize="18sp"
            app:layout_flexBasisPercent="@fraction/signup_btn" />

        <Button
            android:id="@+id/btnVehicleNext"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/btn_next"
            android:text="Tiếp tục"
            android:textColor="#FFF"
            android:textSize="16sp"
            app:layout_flexBasisPercent="@fraction/signup_btn" />

    </com.google.android.flexbox.FlexboxLayout>

</LinearLayout>