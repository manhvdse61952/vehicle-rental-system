<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".layout.main.MainActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:theme="@style/AppTheme.AppBarOverlay">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:weightSum="10">
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay" />
            <!--<EditText-->
                <!--android:id="@+id/edtMainSearch"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_weight="7"-->
                <!--android:hint="Nhập tên xe hoặc địa điểm"-->
                <!--android:textSize="16sp"-->
                <!--android:textColor="@color/primary_text"-->
                <!--android:layout_height="wrap_content" />-->
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:src="@drawable/ic_map_marker_alt"
                android:tint="@color/primary_text"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txt_main_search_address"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:textColor="@color/primary_text"
                android:text="Địa chỉ"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="2dp"
                android:background="@color/primary_text"
                android:layout_height="30dp">

            </View>
            <ImageView
                android:id="@+id/main_search"
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:layout_height="20dp"
                android:tint="@color/primary_text"
                android:src="@drawable/ic_search"/>
            <ImageView
                android:id="@+id/main_extra_search"
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:layout_height="25dp"
                android:tint="@color/primary_text"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_search_plus"/>
        </LinearLayout>




    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_activity_main_2" />

</android.support.design.widget.CoordinatorLayout>