<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">

        <TextView
            android:id="@+id/toolbar_title"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm khuyến mãi"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_margin="15dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_discount"
                android:layout_width="100dp"
                android:src="@drawable/img_default_image"
                android:scaleType="centerCrop"
                android:layout_height="100dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:weightSum="10"
                android:layout_marginLeft="10dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/txt_discount_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vehicle 1"
                    android:textColor="@color/secondary_text"
                    android:padding="5dp"
                    android:textSize="14sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/txt_discount_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Khuyến mãi 15%"
                    android:textColor="#1B5E20"
                    android:padding="5dp"
                    android:textSize="14sp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="5dp">
                    <ImageView
                        android:id="@+id/img_calendar"
                        android:layout_width="20dp"
                        android:scaleType="centerCrop"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_calendar_alt"
                        android:layout_height="20dp" />
                    <TextView
                        android:id="@+id/txt_discount_time"
                        android:layout_width="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:text="01/08/2018 - 10/08/2018"
                        android:textSize="14sp"
                        android:textColor="@color/secondary_text"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ln_hide_remove"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="50dp">
            <Button
                android:id="@+id/btn_remove_discount"
                android:layout_width="200dp"
                android:text="hủy khuyến mãi"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/primary_text"
                android:textStyle="bold"
                android:textSize="14sp"
                android:background="@drawable/border_red"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ln_discount_create"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="15dp"
            android:background="@drawable/border_white_green"
            android:orientation="vertical"
            android:padding="5dp"
            android:weightSum="9">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:weightSum="1">

                <ImageView
                    tools:ignore="VectorDrawableCompat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.1"
                    android:adjustViewBounds="true"
                    android:maxHeight="20dp"
                    android:src="@drawable/ic_calendar_alt" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.3"
                    android:fontFamily="sans-serif"
                    android:text="Ngày bắt đầu"
                    android:textColor="@android:color/background_dark"
                    android:textSize="14sp"
                    android:typeface="normal" />

                <TextView
                    android:id="@+id/txtStartTimePromo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:background="@android:color/transparent"
                    android:ellipsize="end"
                    android:ems="10"
                    android:gravity="end|center_vertical"
                    android:paddingRight="20dp"
                    android:text="Chọn ngày bắt đầu"
                    android:textColorHint="#666666"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:weightSum="1">


                <ImageView
                    tools:ignore="VectorDrawableCompat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.1"
                    android:adjustViewBounds="true"
                    android:maxHeight="20dp"
                    android:src="@drawable/ic_calendar_alt" />

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.3"
                    android:fontFamily="sans-serif"
                    android:text="Ngày kết thúc"
                    android:textColor="@android:color/background_dark"
                    android:textSize="14sp"
                    android:typeface="normal" />

                <TextView
                    android:id="@+id/txtEndTimePromo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.6"
                    android:background="@android:color/transparent"
                    android:ellipsize="end"
                    android:gravity="end|center_vertical"
                    android:inputType="text"
                    android:paddingRight="20dp"
                    android:text="Chọn ngày kết thúc"
                    android:textColorHint="#666666"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:weightSum="1">

                <ImageView
                    app:srcCompat="@drawable/ic_info_outline_black_24dp"
                    tools:ignore="VectorDrawableCompat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.1"
                    android:adjustViewBounds="true"
                    android:maxHeight="20dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.4"
                    android:fontFamily="sans-serif"
                    android:text="Mức giảm giá"
                    android:textColor="@android:color/background_dark"
                    android:textSize="14sp"
                    android:typeface="normal" />

                <Spinner
                    android:id="@+id/spnPromoQuantity"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.5"
                    android:drawSelectorOnTop="true"
                    android:gravity="end"></Spinner>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/btn_create_discount"
            android:layout_width="200dp"
            android:text="Tạo khuyến mãi"
            android:padding="10dp"
            android:textColor="@color/primary_text"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/border_green"
            android:textSize="14sp"
            android:layout_height="50dp" />
    </LinearLayout>
</LinearLayout>