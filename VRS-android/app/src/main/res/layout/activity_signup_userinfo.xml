<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:weightSum="10">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="9"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:text="Bước 1"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="#CCCCCC"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@drawable/ic_back_two"
                android:rotation="180"
                android:tint="#FFFFFF"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:text="Bước 2"
                android:textSize="14sp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@drawable/ic_back_two"
                android:rotation="180"
                android:tint="#CCCCCC"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:text="Bước 3"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#CCCCCC"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@drawable/ic_back_two"
                android:rotation="180"
                android:tint="#CCCCCC"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:text="Bước 4"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="#CCCCCC"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:background="@drawable/border_signup_shadow"
        android:layout_weight="9.5">
        <android.support.design.widget.TextInputLayout
            android:id="@+id/signup_name_txt"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:theme="@style/ThirdAppTheme"
            app:errorTextAppearance="@style/error_apperance">

            <EditText
                android:id="@+id/edtSignupName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Họ và tên"
                android:inputType="text"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="#000" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/signup_phone_txt"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:theme="@style/ThirdAppTheme"
            app:errorTextAppearance="@style/error_apperance">

            <EditText
                android:id="@+id/edtSignupPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Số điện thoại"
                android:inputType="number"
                android:text=""
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="#000" />

        </android.support.design.widget.TextInputLayout>
        <RelativeLayout
            android:id="@+id/ln_image_execute"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5">
            <ImageView
                android:background="@drawable/button_dash_arround"
                android:id="@+id/imgSignupCMND"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />
            <TextView
                android:id="@+id/txt_cmnd_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chụp ảnh chứng minh thư"
                android:layout_centerInParent="true"
                android:textSize="18sp"
                android:textColor="@color/secondary_text"/>
        </RelativeLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/signup_cmnd_txt"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:theme="@style/ThirdAppTheme"
            app:errorTextAppearance="@style/error_apperance">

            <EditText
                android:id="@+id/edtSignupCMND"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Số chứng minh thư"
                android:inputType="number"
                android:text=""
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="#000" />
        </android.support.design.widget.TextInputLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:weightSum="10"
            android:gravity="center"
            android:layout_weight="1.4">
            <Button
                android:id="@+id/btnSignupAccountClean"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/border_shadow"
                android:textAllCaps="false"
                android:text="Làm mới"
                android:textColor="@color/secondary_text"
                android:textSize="16sp" />
            <Button
                android:id="@+id/btnSignupAccountNext"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/border_green"
                android:textAllCaps="false"
                android:text="Tiếp tục"
                android:textColor="@color/primary_text"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>