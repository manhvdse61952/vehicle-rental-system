                                android:layout_height="wrap_content"
                                android:layout_weight="2" />

                            <TextView
                                android:id="@+id/txt_money_total"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:gravity="end"
