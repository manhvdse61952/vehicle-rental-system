                                android:textStyle="bold" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2" />

                            <TextView
                                android:id="@+id/txt_usd_convert"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
