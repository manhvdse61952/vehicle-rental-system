<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:weightSum="10">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Hình thức lấy xe"
            android:textColor="@color/secondary_text"
            android:textSize="20sp" />

        <com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:alignItems="center"
            app:flexWrap="wrap"
            android:layout_marginTop="20dp"
            app:justifyContent="space_around">

            <Button
                android:id="@+id/btnSignupOwner1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_next"
                android:text="nhận xe tại chỗ"
                android:textColor="#fff"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:textSize="18sp"
                app:layout_flexBasisPercent="@fraction/main_search_edt" />

            <Button
                android:id="@+id/btnSignupOwner2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnSignupOwner1"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_next"
                android:text="tự đến lấy xe"
                android:textColor="#fff"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:textSize="18sp"
                app:layout_flexBasisPercent="@fraction/main_search_edt" />
        </com.google.android.flexbox.FlexboxLayout>
    </LinearLayout>
</LinearLayout>