<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">

        <TextView
            android:id="@+id/txt_header_complain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Khiếu nại"
            android:textColor="@color/primary_text"
            android:textSize="18sp" />
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:background="@drawable/border_shadow"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"

                android:text="Lý do khiếu nại"
                android:textColor="@color/secondary_text"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="10">

                <CheckBox
                    android:layout_marginLeft="10dp"
                    android:id="@+id/cbx_issue_inside"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text="Phí nội thất sai" />

                <CheckBox
                    android:id="@+id/cbx_issue_outside"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text="Phí ngoại thất sai" />
            </LinearLayout>

            <CheckBox
                android:layout_marginLeft="10dp"
                android:id="@+id/cbx_issue_owner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="Lỗi khách quan bên chủ xe" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="Mô tả (tối đa 500 kí tự)"
                android:textColor="@color/secondary_text"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edt_issue_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/button_dash_arround"
                android:gravity="top|left"
                android:hint="Nhập nội dung (có thể bỏ trống)"
                android:inputType="textMultiLine"
                android:maxLength="500"
                android:maxLines="7"
                android:minLines="3"
                android:padding="10dp"
                android:scrollbars="vertical"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:weightSum="10">

                <Button
                    android:id="@+id/btn_send_complain"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="5"
                    android:background="@drawable/border_green_primarygreen"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="Gửi yêu cầu"
                    android:textAllCaps="false"
                    android:textColor="@color/primary_text" />

                <Button
                    android:id="@+id/btn_view_complain"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="5"
                    android:background="@drawable/border_red"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="Xem lại hợp đồng"
                    android:textAllCaps="false"
                    android:textColor="@color/primary_text" />
            </LinearLayout>
        </LinearLayout>
        <Button
            android:visibility="invisible"
            android:id="@+id/btn_open_chat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nói chuyện với bên kia"
            android:textSize="16sp"
            android:layout_margin="20dp"
            android:textColor="@color/primary_text"
            android:background="@drawable/border_green_primarygreen" />
    </LinearLayout>
</LinearLayout>