<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Khiếu nại"
            android:textColor="@color/primary_text"
            android:textSize="18sp" />
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/border_shadow"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thông tin cuộc trò chuyện"
                    android:textColor="@color/secondary_text"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:text="Mã hợp đồng" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:gravity="end"
                        android:text="0"
                        android:textColor="@color/secondary_text" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:text="Tên người trò chuyện" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:gravity="end"
                        android:text="Nguyễn Văn A"
                        android:textColor="@color/secondary_text" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/border_shadow">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Lý do khiếu nại"
                    android:textColor="@color/secondary_text"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content" />
                <CheckBox
                    android:id="@+id/cbx_issue_inside"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:text="Phí nội thất không hợp lý" />
                <CheckBox
                    android:id="@+id/cbx_issue_outside"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:text="Phí ngoại thất không hợp lý" />
                <CheckBox
                    android:id="@+id/cbx_issue_owner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:text="Lỗi khách quan bên chủ xe" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Mô tả (tối đa 500 kí tự)"
                    android:textColor="@color/secondary_text"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/edt_issue_content"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:inputType="textMultiLine"
                    android:gravity="top|left"
                    android:maxLines="7"
                    android:minLines="3"
                    android:maxLength="500"
                    android:textSize="14sp"
                    android:padding="10dp"
                    android:scrollbars="vertical"
                    android:hint="Nhập nội dung.."
                    android:background="@drawable/button_dash_arround"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/btn_send_complain"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:text="Gửi yêu cầu"
                    android:textAllCaps="false"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/primary_text"
                    android:background="@drawable/border_green"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ln_chat"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="400dp"
                android:layout_margin="10dp"
                android:padding="20dp"
                android:background="@drawable/border_shadow"
                android:weightSum="10">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="Nội dung cuộc trò chuyện"
                    android:textColor="@color/secondary_text"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:layout_weight="1"/>
                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_weight="8">
                </android.support.v7.widget.RecyclerView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:layout_weight="1">
                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="8"
                        android:hint="Nhập nội dung..."
                        android:paddingLeft="5dp"
                        android:textSize="14sp"
                        android:background="@drawable/border_white"
                        android:layout_height="match_parent" />
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:src="@drawable/ic_menu_send"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>