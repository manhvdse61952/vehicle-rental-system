<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:id="@+id/ln_discount"
    android:background="@drawable/border_shadow"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="15dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_discount"
            android:layout_width="100dp"
            android:src="@drawable/img_default_image"
            android:scaleType="centerCrop"
            android:layout_height="100dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:weightSum="10"
            android:layout_marginLeft="10dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/txt_discount_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vehicle 1"
                android:textColor="@color/secondary_text"
                android:padding="5dp"
                android:textSize="14sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/txt_discount_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Khuyến mãi 15%"
                android:textColor="#1B5E20"
                android:padding="5dp"
                android:textSize="14sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp">
                <ImageView
                    android:id="@+id/img_calendar"
                    android:layout_width="20dp"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_calendar_alt"
                    android:layout_height="20dp" />
                <TextView
                    android:id="@+id/txt_discount_time"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="01/08/2018 - 10/08/2018"
                    android:textSize="14sp"
                    android:textColor="@color/secondary_text"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>