<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:layout_margin="5dp"
    android:id="@+id/ln_manage_contract"
    android:background="@drawable/border_shadow"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:text="Hợp đồng"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/secondary_text"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/txt_manage_contract_id"
            android:layout_width="wrap_content"
            android:text="#16"
            android:layout_marginLeft="10dp"
            android:gravity="right"
            android:textSize="16sp"
            android:textColor="#0288D1"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="15dp"
            android:layout_margin="5dp"
            android:src="@drawable/ic_calendar_alt"
            android:layout_height="15dp" />
        <TextView
            android:layout_width="wrap_content"
            android:text="Thời gian bắt đầu:"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:textColor="@color/secondary_text"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/txt_manage_contract_start_time"
            android:layout_width="wrap_content"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:text="--h--, --/--/----"
            android:textSize="14sp"
            android:textColor="@color/secondary_text"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="15dp"
            android:layout_margin="5dp"
            android:src="@drawable/ic_calendar_alt"
            android:layout_height="15dp" />
        <TextView
            android:layout_width="wrap_content"
            android:text="Thời gian kết thúc:"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:textColor="@color/secondary_text"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/txt_manage_contract_end_time"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="--h--, --/--/----"
            android:textSize="14sp"
            android:textColor="@color/secondary_text"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20dp">
        <ImageView
            android:layout_width="15dp"
            android:layout_margin="5dp"
            android:src="@drawable/ic_discount"
            android:layout_height="15dp" />
        <TextView
            android:layout_width="wrap_content"
            android:text="Chi phí thuê xe:"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:textColor="@color/secondary_text"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/txt_manage_contract_rent_fee"
            android:layout_width="wrap_content"
            android:text="0 vnđ"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:textColor="@color/secondary_text"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20dp">
        <ImageView
            android:layout_width="15dp"
            android:layout_margin="5dp"
            android:src="@drawable/ic_discount"
            android:layout_height="15dp" />
        <TextView
            android:layout_width="wrap_content"
            android:text="Tổng tiền:"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:textColor="@color/secondary_text"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/txt_manage_contract_total_fee"
            android:layout_width="wrap_content"
            android:text="0 vnđ"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:textColor="#FF0000"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="24dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:text="Trạng thái:"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:textColor="@color/secondary_text"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/txt_manage_contract_status"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="Chưa bắt đầu"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#01579B"
            android:layout_height="match_parent" />
    </LinearLayout>
    <!--<View-->
        <!--android:layout_marginTop="10dp"-->
        <!--android:layout_width="match_parent"-->
        <!--android:background="#BDBDBD"-->
        <!--android:layout_height="0.5dp"/>-->
</LinearLayout>