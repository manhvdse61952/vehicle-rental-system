<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/itemSearch"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@drawable/border"
        >

        <ImageView
            android:id="@+id/imgSearchItem"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="0.2"
            android:layout_gravity="center_vertical"
            android:src="@drawable/img_customer"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtSearchItemName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Toyota corolla altis"
                android:textColor="#000"
                android:textSize="20sp"
                android:maxLength="35"
                android:textStyle="bold"/>
            <LinearLayout
                android:id="@+id/ln1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/txtSearchItemName"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtSearchItemSeat"
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:text="4 chỗ"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txtSearchItemPrice"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:text="100.000 vnd"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold|italic"
                    android:gravity="end"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtSearchItemDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ln1"
                android:layout_marginTop="5dp"
                android:textColor="#000"
                android:textSize="16sp"
                android:maxLength="70"
                android:text="Xe mới mua năm 2017, nội thất còn mới, xe tiết kiệm nhiên liệu"/>
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>