<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/img_time">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01:00:00"
            android:textColor="#fff"
            android:layout_marginTop="100dp"
            android:layout_centerHorizontal="true"
            android:textSize="72sp"/>

        <com.google.android.flexbox.FlexboxLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            app:alignItems="center"
            app:flexWrap="wrap"
            app:justifyContent="space_around">

            <Button
                android:id="@+id/btnOrderReport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_flexBasisPercent="@fraction/signup_btn"
                android:text="Báo hỏng"
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:background="@drawable/btn_next"
                android:textColor="#fff"/>
            <Button
                android:id="@+id/btnOrderReturnCar"
                android:layout_below="@+id/btnSignupOwner1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#0097A7"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                app:layout_flexBasisPercent="@fraction/signup_img"
                android:text="trả xe" />


        </com.google.android.flexbox.FlexboxLayout>
    </RelativeLayout>
</LinearLayout>