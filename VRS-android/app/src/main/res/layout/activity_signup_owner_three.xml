        android:id="@+id/signup_ico"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:alignItems="center"
        android:layout_marginBottom="5dp"
        app:flexWrap="wrap"
        app:justifyContent="space_around">

