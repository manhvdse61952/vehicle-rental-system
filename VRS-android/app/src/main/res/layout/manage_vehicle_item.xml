<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical"
    android:background="@drawable/border_shadow"
    android:id="@+id/ln_vehicle_item">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="15dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/manage_vehicle_image"
            android:layout_height="100dp"
            android:layout_width="100dp"
            android:src="@drawable/img_default_image"
            android:scaleType="centerCrop" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:weightSum="10">

            <TextView
                android:id="@+id/txt_vehicle_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:padding="5dp"
                android:text="Test vehicle 1"
                android:textColor="@color/secondary_text"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_weight="4.5" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="2">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:text="Tình trạng:"
                    android:gravity="center_vertical" />
                <TextView
                    android:id="@+id/txt_vehicle_status"
                    android:layout_width="wrap_content"
                    android:text="rảnh rỗi"
                    android:paddingLeft="5dp"
                    android:textColor="#1B5E20"
                    android:textSize="14sp"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="3.5">
                <TextView
                    android:text="Số khung:"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:textSize="12sp"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/txt_vehicle_frameNumber"
                    android:layout_width="wrap_content"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:textColor="@color/secondary_text"
                    android:text="XXX"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>