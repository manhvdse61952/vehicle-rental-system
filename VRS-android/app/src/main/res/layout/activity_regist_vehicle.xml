<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">

        <TextView
            android:id="@+id/toolbar_title"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng ký xe"
            android:textColor="@android:color/white"
            />
    </android.support.v7.widget.Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_shadow"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="145dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border_shadow"
                android:orientation="horizontal"
                android:weightSum="9">

                <RelativeLayout
                    android:id="@+id/btnImageFront"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:background="@drawable/button_dash_arround"
                    android:layout_marginLeft="5dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/imgFront"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />
                    <TextView
                        android:id="@+id/txtImageFront"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="phía trước xe"
                        android:textColor="@color/secondary_text"
                        android:textAllCaps="true"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/btnImageBack"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:background="@drawable/button_dash_arround"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/imgBack"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />
                    <TextView
                        android:id="@+id/txtImageBack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="phía sau xe"
                        android:textColor="@color/secondary_text"
                        android:textAllCaps="true"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/btnImageFrame"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:background="@drawable/button_dash_arround"
                    android:layout_marginRight="5dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/imgFrame"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />
                    <TextView
                        android:id="@+id/txtImageFrame"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="giấy đ.ký xe"
                        android:textColor="@color/secondary_text"
                        android:textAllCaps="true"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:background="@drawable/border_white_grey"
                android:layout_gravity="center"
                android:minHeight="45dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:weightSum="1">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.1"
                    android:adjustViewBounds="true"
                    android:maxHeight="30dp"
                    app:srcCompat="@drawable/ic_info_outline_black_24dp"
                    tools:ignore="VectorDrawableCompat" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.3"
                    android:fontFamily="sans-serif"
                    android:text="Tên xe"
                    android:textColor="@android:color/background_dark"
                    android:textSize="14sp"
                    android:typeface="normal" />

                <TextView
                    android:id="@+id/txtCarModel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:background="@android:color/transparent"
                    android:ellipsize="end"
                    android:ems="10"
                    android:gravity="end|center_vertical"
                    android:paddingRight="20dp"
                    android:text="Nhấn để chọn xe"
                    android:textColor="@color/secondary_text"
                    android:textSize="16sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:background="@drawable/border_white_grey"
                android:layout_gravity="center"
                android:minHeight="45dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"

                android:weightSum="1">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.1"
                    android:adjustViewBounds="true"
                    android:maxHeight="30dp"
                    app:srcCompat="@drawable/ic_info_outline_black_24dp"
                    tools:ignore="VectorDrawableCompat" />

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.3"
                    android:fontFamily="sans-serif"
                    android:text="Biển số xe"
                    android:textColor="@android:color/background_dark"
                    android:textSize="14sp"
                    android:typeface="normal" />

                <EditText
                    android:id="@+id/edtPlate"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.6"
                    android:background="@android:color/transparent"
                    android:ellipsize="end"
                    android:ems="10"
                    android:gravity="end|center_vertical"
                    android:hint="Biển số"
                    android:inputType="text"
                    android:paddingRight="20dp"
                    android:textColor="@color/secondary_text"
                    android:textSize="16sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:background="@drawable/border_white_grey"
                android:layout_gravity="center"
                android:minHeight="45dp"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:weightSum="1">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.1"
                    android:adjustViewBounds="true"
                    android:maxHeight="30dp"
                    app:srcCompat="@drawable/ic_info_outline_black_24dp"
                    tools:ignore="VectorDrawableCompat" />

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.3"
                    android:fontFamily="sans-serif"
                    android:text="Số khung"
                    android:textColor="@android:color/background_dark"
                    android:textSize="14sp"
                    android:typeface="normal" />

                <EditText
                    android:id="@+id/edtFrame"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.6"
                    android:background="@android:color/transparent"
                    android:ellipsize="end"
                    android:ems="10"
                    android:gravity="end|center_vertical"
                    android:hint="Số khung"
                    android:inputType="text"
                    android:paddingRight="20dp"
                    android:textColor="@color/secondary_text"
                    android:textSize="16sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/border_white_grey"
                android:minHeight="45dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:weightSum="1"

                >

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.1"
                    android:adjustViewBounds="true"
                    android:maxHeight="30dp"
                    app:srcCompat="@drawable/icon_list" />

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.4"
                    android:fontFamily="sans-serif"
                    android:text="Loại động cơ"
                    android:textColor="@android:color/background_dark"
                    android:textSize="14sp"
                    android:typeface="normal" />

                <Spinner
                    android:id="@+id/spnEngine"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:gravity="end"
                    android:layout_gravity="center_vertical"
                    android:drawSelectorOnTop="true"
                    android:layout_height="match_parent">
                </Spinner>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/border_white_grey"
                android:minHeight="45dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:weightSum="1"
                >

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.1"
                    android:adjustViewBounds="true"
                    android:maxHeight="30dp"
                    app:srcCompat="@drawable/icon_list" />

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.4"
                    android:fontFamily="sans-serif"
                    android:text="Hệ truyền tải"
                    android:textColor="@android:color/background_dark"
                    android:textSize="14sp"
                    android:typeface="normal" />

                <Spinner
                    android:id="@+id/spnTranmission"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:gravity="end"
                    android:layout_gravity="center_vertical"
                    android:drawSelectorOnTop="true"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/border_white_grey"
                android:minHeight="45dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:weightSum="1"

                >

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.1"
                    android:adjustViewBounds="true"
                    android:maxHeight="30dp"
                    app:srcCompat="@drawable/icon_list" />

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.4"
                    android:fontFamily="sans-serif"
                    android:text="Năm sản xuất"
                    android:textColor="@android:color/background_dark"
                    android:textSize="14sp"
                    android:typeface="normal" />

                <Spinner
                    android:id="@+id/spnYear"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:gravity="end"
                    android:layout_gravity="center_vertical"
                    android:drawSelectorOnTop="true"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border_white_grey"
                android:minHeight="45dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:weightSum="1">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.1"
                    android:adjustViewBounds="true"
                    android:maxHeight="30dp"
                    app:srcCompat="@drawable/icon_list" />
                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.4"
                    android:fontFamily="sans-serif"
                    android:text="Số chỗ ngồi"
                    android:textColor="@android:color/background_dark"
                    android:textSize="14sp"
                    android:typeface="normal" />


                <TextView
                    android:id="@+id/txtSeat"
                    android:gravity="end|center_vertical"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:text="0"
                    android:textColor="#666666"
                    android:fontFamily="sans-serif"
                    android:textSize="16sp"
                    android:paddingRight="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:minHeight="45dp"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vị trí của xe"
                    android:textColor="@color/secondary_text"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/btn_current_address"
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:text="Lấy vị trí tại chỗ"
                        android:textAllCaps="false"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"/>
                    <Button
                        android:id="@+id/btn_write_address"
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:text="Nhập vị trí"
                        android:textAllCaps="false"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/txt_vehicle_address"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:text="Chưa nhận được vị trí..."
                    android:textColor="@color/secondary_text"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/border_white_grey"
                android:minHeight="45dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:weightSum="1">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.1"
                    android:adjustViewBounds="true"
                    android:maxHeight="30dp"
                    app:srcCompat="@drawable/icon_price" />

                <TextView
                    android:id="@+id/pricehour"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.3"
                    android:fontFamily="sans-serif"
                    android:text="Tiền thuê/giờ"
                    android:textColor="@android:color/background_dark"
                    android:textSize="14sp"
                    android:typeface="normal" />

                <EditText
                    android:id="@+id/edtPriceHour"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.6"
                    android:background="@android:color/transparent"
                    android:ellipsize="end"
                    android:ems="10"
                    android:gravity="right|center_vertical"
                    android:hint="Gợi ý: 100.000   "
                    android:maxLength="11"
                    android:inputType="number"
                    android:paddingRight="10dp"
                    android:textColorHint="#666666"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/border_white_grey"
                android:minHeight="45dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:weightSum="1">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.1"
                    android:adjustViewBounds="true"
                    android:maxHeight="30dp"
                    app:srcCompat="@drawable/icon_price" />

                <TextView
                    android:id="@+id/priceday"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.35"
                    android:fontFamily="sans-serif"
                    android:text="Tiền thuê/ngày"
                    android:textColor="@android:color/background_dark"
                    android:textSize="14sp"
                    android:typeface="normal" />

                <EditText
                    android:id="@+id/edtPriceDay"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.55"
                    android:background="@android:color/transparent"
                    android:ellipsize="end"
                    android:ems="10"
                    android:gravity="end|center_vertical"
                    android:hint="Gợi ý: 1.300.000"
                    android:inputType="number"
                    android:paddingRight="10dp"
                    android:maxLength="11"
                    android:textColorHint="#666666"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/border_white_grey"
                android:minHeight="45dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:weightSum="1">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.1"
                    android:adjustViewBounds="true"
                    android:maxHeight="30dp"
                    app:srcCompat="@drawable/icon_price" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.3"
                    android:fontFamily="sans-serif"
                    android:text="Tiền cọc"
                    android:textColor="@android:color/background_dark"
                    android:textSize="14sp"
                    android:typeface="normal" />

                <EditText
                    android:id="@+id/edtDepositFee"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.6"
                    android:background="@android:color/transparent"
                    android:ellipsize="end"
                    android:ems="10"
                    android:gravity="end|center_vertical"
                    android:hint="Gợi ý: 5.000.000"
                    android:inputType="number"
                    android:paddingRight="10dp"
                    android:maxLength="11"
                    android:textColorHint="#666666"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/border_white_grey"
                android:minHeight="50dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:weightSum="1">

                <CheckBox
                    android:id="@+id/cbx_haveDriver"
                    android:layout_width="match_parent"
                    android:text="Xe có kèm theo tài xế"
                    android:paddingLeft="10dp"
                    android:checked="true"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/border_white_grey"
            android:minHeight="50dp"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="4.5"
                android:text="Hình thức nhận xe"
                android:gravity="center_vertical"
                android:textColor="@color/secondary_text"
                android:paddingLeft="10dp"
                android:layout_height="match_parent" />
            <Spinner
                android:id="@+id/spn_receiveType"
                android:layout_width="0dp"
                android:layout_weight="5.5"
                android:entries="@array/receiveType"
                android:drawSelectorOnTop="true"
                android:layout_height="match_parent">

            </Spinner>

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/border_white_grey"
                android:minHeight="50dp"
                android:orientation="vertical"
                android:padding="10dp"
                android:weightSum="10">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="20dp"
                        android:src="@drawable/ic_calendar_alt"
                        android:layout_height="20dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Thời gian rảnh của xe (theo tuần)"
                        android:textColor="@color/secondary_text"/>
                </LinearLayout>
                <RadioGroup
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:id="@+id/rd_free_full"
                        android:layout_width="wrap_content"
                        android:text="Xe rảnh cả tuần"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:id="@+id/rd_free_specific"
                        android:layout_width="wrap_content"
                        android:text="Xe rảnh vào các thứ"
                        android:layout_height="wrap_content" />
                </RadioGroup>
                <LinearLayout
                    android:id="@+id/ln_free_dow"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_height="230dp">
                    <CheckBox
                        android:id="@+id/cbx_monday"
                        android:layout_width="wrap_content"
                        android:text="Thứ hai"
                        android:layout_height="wrap_content" />
                    <CheckBox
                        android:id="@+id/cbx_tuesday"
                        android:layout_width="wrap_content"
                        android:text="Thứ ba"
                        android:layout_height="wrap_content" />
                    <CheckBox
                        android:id="@+id/cbx_wednesday"
                        android:layout_width="wrap_content"
                        android:text="Thứ tư"
                        android:layout_height="wrap_content" />
                    <CheckBox
                        android:id="@+id/cbx_thursday"
                        android:layout_width="wrap_content"
                        android:text="Thứ năm"
                        android:layout_height="wrap_content" />
                    <CheckBox
                        android:id="@+id/cbx_friday"
                        android:layout_width="wrap_content"
                        android:text="Thứ sáu"
                        android:layout_height="wrap_content" />
                    <CheckBox
                        android:id="@+id/cbx_saturday"
                        android:layout_width="wrap_content"
                        android:text="Thứ bảy"
                        android:layout_height="wrap_content" />
                    <CheckBox
                        android:id="@+id/cbx_sunday"
                        android:layout_width="wrap_content"
                        android:text="Chủ nhật"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Giấy tờ yêu cầu"
                    android:textColor="#000"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/cbxHouseHold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Sổ hộ khẩu"
                    android:checked="false"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/cbxIdCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chứng minh nhân dân"
                    android:checked="false"
                    android:textSize="16sp" />
            </LinearLayout>
            <Button
                android:id="@+id/btnCreateVehicle"
                android:layout_width="match_parent"
                android:text="Đăng ký xe"
                android:textColor="@color/primary_text"
                android:background="@color/colorPrimary"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>
