<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">

        <TextView
            android:id="@+id/toolbar_title"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng ký xe"
            android:textColor="@android:color/white"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            app:srcCompat="@drawable/ic_check_white_24dp"
            tools:ignore="VectorDrawableCompat">

        </ImageView>
    </android.support.v7.widget.Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_shadow"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border_shadow"
                android:minHeight="145dp"
                android:orientation="horizontal"
                android:weightSum="9">

                <RelativeLayout
                    android:id="@+id/btnImageFront"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:background="@drawable/button_dash_arround"
                    android:layout_marginLeft="5dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="phía trước xe"
                        android:textColor="@color/secondary_text"
                        android:textAllCaps="true"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"/>
                    <LinearLayout
                        android:id="@+id/lnImageFront"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="10"
                        android:visibility="invisible"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_camera"
                            />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:src="@drawable/ic_menu_gallery"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/btnImageBack"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:background="@drawable/button_dash_arround"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="phía sau xe"
                        android:textColor="@color/secondary_text"
                        android:textAllCaps="true"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"/>
                    <LinearLayout
                        android:id="@+id/lnImageBack"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="10"
                        android:visibility="invisible"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_camera"
                            />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:src="@drawable/ic_menu_gallery"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/btnImageFrame"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:background="@drawable/button_dash_arround"
                    android:layout_marginRight="5dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="giấy đ.ký xe"
                        android:textColor="@color/secondary_text"
                        android:textAllCaps="true"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"/>
                    <LinearLayout
                        android:id="@+id/lnImageFrame"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="10"
                        android:visibility="invisible"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_camera"
                            />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:src="@drawable/ic_menu_gallery"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:background="@drawable/border_input"
                android:layout_gravity="center"
                android:minHeight="45dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"

                android:weightSum="1">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.1"
                    android:adjustViewBounds="true"
                    android:maxHeight="30dp"
                    app:srcCompat="@drawable/ic_info_outline_black_24dp"
                    tools:ignore="VectorDrawableCompat" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.4"
                    android:fontFamily="sans-serif"
                    android:text="Tên xe"
                    android:textColor="@android:color/background_dark"
                    android:textSize="14sp"
                    android:typeface="normal" />

                <EditText
                    android:id="@+id/edtCarModel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@android:color/transparent"
                    android:ellipsize="end"
                    android:ems="10"
                    android:gravity="end|center_vertical"
                    android:hint="Chọn xe"
                    android:inputType="number"
                    android:paddingRight="10dp"
                    android:textColorHint="#666666"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:background="@drawable/border_input"
                android:layout_gravity="center"
                android:minHeight="45dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"

                android:weightSum="1">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.1"
                    android:adjustViewBounds="true"
                    android:maxHeight="30dp"
                    app:srcCompat="@drawable/ic_info_outline_black_24dp"
                    tools:ignore="VectorDrawableCompat" />

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.4"
                    android:fontFamily="sans-serif"
                    android:text="Biển số xe"
                    android:textColor="@android:color/background_dark"
                    android:textSize="14sp"
                    android:typeface="normal" />

                <EditText
                    android:id="@+id/txtPlate"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.5"
                    android:background="@android:color/transparent"
                    android:ellipsize="end"
                    android:ems="10"
                    android:gravity="end|center_vertical"
                    android:hint="Biển số"
                    android:inputType="number"
                    android:paddingRight="10dp"
                    android:textColorHint="#666666"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:background="@drawable/border_input"
                android:layout_gravity="center"
                android:minHeight="45dp"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:weightSum="1">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.1"
                    android:adjustViewBounds="true"
                    android:maxHeight="30dp"
                    app:srcCompat="@drawable/ic_info_outline_black_24dp"
                    tools:ignore="VectorDrawableCompat" />

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.4"
                    android:fontFamily="sans-serif"
                    android:text="Số khung"
                    android:textColor="@android:color/background_dark"
                    android:textSize="14sp"
                    android:typeface="normal" />

                <EditText
                    android:id="@+id/txtFrame"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.5"
                    android:background="@android:color/transparent"
                    android:ellipsize="end"
                    android:ems="10"
                    android:gravity="end|center_vertical"
                    android:hint="Số khung"
                    android:inputType="number"
                    android:paddingRight="10dp"
                    android:textColorHint="#666666"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/border_input"
                android:minHeight="45dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:weightSum="1"

                >

                <ImageView
                    android:id="@id/imageView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.1"
                    android:adjustViewBounds="true"
                    android:maxHeight="30dp"
                    app:srcCompat="@drawable/icon_list" />

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.4"
                    android:fontFamily="sans-serif"
                    android:text="Loại động cơ"
                    android:textColor="@android:color/background_dark"
                    android:textSize="14sp"
                    android:typeface="normal" />

                <Spinner
                    android:id="@+id/spnEngine"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:gravity="end"
                    android:layout_gravity="center_vertical"
                    android:drawSelectorOnTop="true"
                    android:layout_height="match_parent">
                </Spinner>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/border_input"
                android:minHeight="45dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:weightSum="1"
                >

                <ImageView
                    android:id="@id/imageView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.1"
                    android:adjustViewBounds="true"
                    android:maxHeight="30dp"
                    app:srcCompat="@drawable/icon_list" />

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.4"
                    android:fontFamily="sans-serif"
                    android:text="Hệ truyền tải"
                    android:textColor="@android:color/background_dark"
                    android:textSize="14sp"
                    android:typeface="normal" />

                <Spinner
                    android:id="@+id/spnTranmission"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:gravity="end"
                    android:layout_gravity="center_vertical"
                    android:drawSelectorOnTop="true"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/border_input"
                android:minHeight="45dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:weightSum="1"

                >

                <ImageView
                    android:id="@id/imageView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.1"
                    android:adjustViewBounds="true"
                    android:maxHeight="30dp"
                    app:srcCompat="@drawable/icon_list" />

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.4"
                    android:fontFamily="sans-serif"
                    android:text="Năm sản xuất"
                    android:textColor="@android:color/background_dark"
                    android:textSize="14sp"
                    android:typeface="normal" />

                <Spinner
                    android:id="@+id/spnYear"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:gravity="end"
                    android:layout_gravity="center_vertical"
                    android:drawSelectorOnTop="true"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border_input"
                android:minHeight="45dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:weightSum="1">

                <ImageView
                    android:id="@id/imageView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.1"
                    android:adjustViewBounds="true"
                    android:maxHeight="30dp"
                    app:srcCompat="@drawable/icon_list" />
                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.4"
                    android:fontFamily="sans-serif"
                    android:text="Số chỗ ngồi"
                    android:textColor="@android:color/background_dark"
                    android:textSize="14sp"
                    android:typeface="normal" />


                <TextView
                    android:id="@+id/txtSeat"
                    android:gravity="end|center_vertical"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:text="0"
                    android:textColor="#666666"
                    android:fontFamily="sans-serif"
                    android:textSize="14sp"
                    android:paddingRight="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/border_input"
                android:minHeight="45dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:weightSum="1">

                <ImageView
                    android:id="@id/imageView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.1"
                    android:adjustViewBounds="true"
                    android:maxHeight="30dp"
                    app:srcCompat="@drawable/ic_location_on_black_24dp"
                    tools:ignore="VectorDrawableCompat" />

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.4"
                    android:fontFamily="sans-serif"
                    android:text="Thành phố"
                    android:textColor="@android:color/background_dark"
                    android:textSize="14sp"
                    android:typeface="normal" />

                <Spinner
                    android:id="@+id/spnCity"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:gravity="end"
                    android:layout_gravity="center_vertical"
                    android:drawSelectorOnTop="true"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border_input"
                android:minHeight="45dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:weightSum="1">

                <ImageView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.1"
                    android:adjustViewBounds="true"
                    android:maxHeight="30dp"
                    app:srcCompat="@drawable/ic_location_on_black_24dp"
                    tools:ignore="VectorDrawableCompat" />

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.4"
                    android:fontFamily="sans-serif"
                    android:text="Quận"
                    android:textColor="@android:color/background_dark"
                    android:textSize="14sp"
                    android:typeface="normal" />

                <Spinner
                    android:id="@+id/spnDistrict"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:gravity="end"
                    android:layout_gravity="center_vertical"
                    android:drawSelectorOnTop="true"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/border_input"
                android:minHeight="45dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.1"
                    android:adjustViewBounds="true"
                    android:maxHeight="30dp"
                    app:srcCompat="@drawable/icon_price" />

                <TextView
                    android:id="@+id/pricehour"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.4"
                    android:fontFamily="sans-serif"
                    android:text="Giá thuê/giờ"
                    android:textColor="@android:color/background_dark"
                    android:textSize="14sp"
                    android:typeface="normal" />

                <EditText
                    android:id="@+id/txtpricehour"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.5"
                    android:background="@android:color/transparent"
                    android:ellipsize="end"
                    android:ems="10"
                    android:gravity="right|center_vertical"
                    android:hint="Nhập giá tiền"
                    android:inputType="number"
                    android:paddingRight="10dp"
                    android:textColorHint="#666666"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/border_input"
                android:minHeight="45dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.1"
                    android:adjustViewBounds="true"
                    android:maxHeight="30dp"
                    app:srcCompat="@drawable/icon_price" />

                <TextView
                    android:id="@+id/priceday"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.4"
                    android:fontFamily="sans-serif"
                    android:text="Giá thuê/ngày"
                    android:textColor="@android:color/background_dark"
                    android:textSize="14sp"
                    android:typeface="normal" />

                <EditText
                    android:id="@+id/txtPriceDay"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.5"
                    android:background="@android:color/transparent"
                    android:ellipsize="end"
                    android:ems="10"
                    android:gravity="end|center_vertical"
                    android:hint="Nhập giá tiền"
                    android:inputType="number"
                    android:paddingRight="10dp"
                    android:textColorHint="#666666"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/border_input"
                android:minHeight="45dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.1"
                    android:adjustViewBounds="true"
                    android:maxHeight="30dp"
                    app:srcCompat="@drawable/icon_price" />

                <TextView
                    android:id="@+id/priceSlot"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.4"
                    android:fontFamily="sans-serif"
                    android:text="Giá thuê/buổi"
                    android:textColor="@android:color/background_dark"
                    android:textSize="14sp"
                    android:typeface="normal" />

                <EditText
                    android:id="@+id/txtPriceSlot"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.5"
                    android:background="@android:color/transparent"
                    android:ellipsize="end"
                    android:ems="10"
                    android:gravity="end|center_vertical"
                    android:hint="Nhập giá tiền"
                    android:inputType="number"
                    android:paddingRight="10dp"

                    android:textColorHint="#666666"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>
